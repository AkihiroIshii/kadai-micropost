<% if current_user.added_like?(micropost) %>
  <%= form_for(current_user.likes.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= f.submit 'not like', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= f.submit 'like', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>